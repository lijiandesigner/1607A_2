<script>
    $(function () {
        $("#totalpage").text(Math.ceil((Number($("#totaldata").text()) / 5)));
    })
    function BtnUp() {
        layui.use('layer', function () {
            if ($("#currentindex").text() != 1) {
                location.href = "/Attendance/GetAllAttend?pageindex=" + Number(Number($("#currentindex").text()) - 1);
            }
            else {
                layer.alert('已经是首页了');
            }
        })
    }
    function BtnDown() {
        layui.use('layer', function () {
            if ($("#currentindex").text() != $("#totalpage").text()) {
                location.href = "/Attendance/GetAllAttend?pageindex=" + Number(Number($("#currentindex").text()) + 1);
            }
            else {
                layer.alert('已经是尾页了');
            }
        })
    }
    fun();
    function fun() {
        $("[name=Menu]").empty();
        $.ajax({
            url: "../Login/showmenu",
            contentType: "application/json",
            dataType: "json",
            async: false,
            success: function (data) {
                var li = '';
                for (var i in data) {
                    li += '  <li><a href="' + data[i].href + '"><i class="fa fa-edit"></i><span>' + data[i].PermissionName + '</span></a></li>';
                }
                $("[name=Menu]").append(li);


            }

        })

    }
    var arr = ['正常', '迟到', '旷工', '早退', '未打卡'];
    var Chartdata = [];
    var Color = [
        '#66FFFF', '#ffce56', '#ff6384', '#36a2eb', '#cc65fe',
    ]
    var zc = 0, cd = 0, kg = 0, zt = 0, wdk = 0;
    $.ajax({
        url: "/Attendance/GetChartsAttend",
        dataType: "json",
        contentType: "application/json",
        async: false,
        success: function (data) {
            for (var i in data) {
                if (data[i].AttenState == 1) {
                    zc = zc + 1;
                }
                else if (data[i].AttenState == 2) {
                    cd = cd + 1;
                }
                else if (data[i].AttenState == 4) {
                    zt = zt + 1;
                }
                else if (data[i].AttenState == 3) {
                    kg = kg + 1;
                }
                else {
                    wdk = wdk + 1;
                }
            }
            Chartdata = [zc, cd, kg, zt, wdk];
        }
    })
    var color = Chart.helpers.color;
    var barChartData = {
        labels: arr,
        datasets: [{
            label: '员工打卡信息',
            backgroundColor: Color,
            borderColor: window.chartColors.red,
            borderWidth: 1,
            data: Chartdata
        }]

    };

    window.onload = function () {
        var ctx = document.getElementById('canvas').getContext('2d');
        window.myBar = new Chart(ctx, {
            type: 'pie',
            data: barChartData,
            options: {
                responsive: true,
                legend: {
                    position: 'top',
                },
                title: {
                    display: true,
                    text: ''
                }
            }
        });

    };
</script>
