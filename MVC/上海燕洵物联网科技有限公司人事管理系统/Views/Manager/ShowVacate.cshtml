@model IEnumerable<上海燕洵物联网科技有限公司人事管理系统.Models.VacateViewModel>
@using 上海燕洵物联网科技有限公司人事管理系统.Controllers

@{
    ViewBag.Title = "ShowVacate";
}

<h2>ShowVacate</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EmpsId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cause)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Remark)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VacateState)
        </th>
        <th>操作</th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.EmpsId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cause)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Remark)
        </td>
        <td>
            @{StateInfo s = (StateInfo)item.VacateState;}
            @s
        </td>
       
        <td>
            @if (s == StateInfo.审核通过)
            {
                @:已通过
            }
            else if (s == StateInfo.待审核)
            {
                @Html.ActionLink("审批", "VacateEmp", new { id = item.Id })
                             else
                           {
                        @:已驳回
                       
            }

           @Html.ActionLink("删除", "DeleteVacate", new { id = item.Id })
        </td>
    </tr>
}

</table>
<script>
    fun();
    function fun() {
        $("[name=Menu]").empty();
        $.ajax({
            url: "../Login/ShowMenu",
            contentType: "application/json",
            dataType: "json",
            success: function (data) {
                console.log(data);
                var li = '';
                for (var i in data) {
                    li += '  <li><a href="\\Login\\funmenu?PermissionName=' + data[i].PermissionName + '"><i class="fa fa-edit"></i><span>' + data[i].PermissionName + '</span></a></li>';
                }
                $("[name=Menu]").append(li);
            }

        })


    }
</script>
