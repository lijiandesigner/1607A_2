@model IEnumerable<上海燕洵物联网科技有限公司人事管理系统.Models.DepartmentViewModel>

@{
    ViewBag.Title = "ShowDepart";
}

<h2>ShowDepart</h2>

<p>
    @Html.ActionLink("新增部门", "AddDepart")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bremark)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Bremark)
        </td>
        <td>
            @Html.ActionLink("修改", "Edit", new { id=item.Id }) |
            @Html.ActionLink("详情", "Details", new { id=item.Id }) |
            @Html.ActionLink("删除", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
