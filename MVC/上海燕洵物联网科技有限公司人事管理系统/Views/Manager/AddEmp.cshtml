@model 上海燕洵物联网科技有限公司人事管理系统.Models.EmpViewModel

@{
    ViewBag.Title = "添加员工";
}
<script src="~/Scripts/jquery-3.3.1.js"></script>
<h2>添加员工</h2>

@using (Html.BeginForm("AddEmp", "Manager",FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.Label("职员姓名:", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Ename)
            @Html.ValidationMessageFor(model => model.Ename)
        </div>
    </div>

    <div class="form-group">
        @Html.Label("职员性别:", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.RadioButtonFor(model => model.Esex, "男", new { @checked = "checked" })男
            @Html.RadioButtonFor(model => model.Esex, "女")女
        </div>
    </div>
    <div class="form-group">
        @Html.Label("部门:", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model=>model.DepartmentsId,ViewBag.Showdepart as IEnumerable<SelectListItem>)
           
        </div>
    </div>

    <div class="form-group">
        @Html.Label("身份证号:", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Papersnum)
            @Html.ValidationMessageFor(model => model.Papersnum)
        </div>
    </div>

    <div class="form-group">
        @Html.Label("联系电话:", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Ephone)
            @Html.ValidationMessageFor(model => model.Ephone)
        </div>
    </div>

    <div class="form-group">
        @Html.Label("职务名称:", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <select id="Select1" name="Eduty">
                <option>经理</option>
                <option>.Net开发工程师</option>
                <option>财务会计</option>
                <option>考勤经理</option>
            </select>
        </div>
    </div>

    <div class="form-group">
        @Html.Label("个人邮箱", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Email)
            @Html.ValidationMessageFor(model => model.Email)
        </div>
    </div>

    <div class="form-group">
        @Html.Label("合同类型", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <select id="Select1" name="Tracttype">
                <option>实习合同</option>
                <option>劳动合同</option>
            </select>
        </div>
    </div>

    <div class="form-group">
        @Html.Label("员工类型", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <select id="Select1" name="Etype">
                <option>全职</option>
                <option>兼职</option>
                <option>实习</option>
                <option>外派</option>
            </select>
        </div>
    </div>

    <div class="form-group">
        @Html.Label("备注", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.ERemark)
            @Html.ValidationMessageFor(model => model.ERemark)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="确定" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("返回员工列表", "GetAllEmp")
</div>

<script>
    fun();
    function fun() {
        $("[name=Menu]").empty();
        $.ajax({
            url: "../Login/ShowMenu",
            contentType: "application/json",
            dataType: "json",
            success: function (data) {
                console.log(data);
                var li = '';
                for (var i in data) {
                    li += '  <li><a href="' + data[i].href + '"><i class="fa fa-edit"></i><span>' + data[i].PermissionName + '</span></a></li>';
                }
                $("[name=Menu]").append(li);
            }

        })


    }
</script>
